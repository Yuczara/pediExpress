<%- include('templates/cabeceraCliente.ejs') %>

<img src="https://cdn.pixabay.com/photo/2020/05/21/18/52/supermarket-5202138_960_720.jpg" width="100%" >

<div class="mt-3 ">
  <nav aria-label="Productos">
    <ul class="pagination">
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
      <li class="page-item"><a class="page-link" href="#">1</a></li>
      <li class="page-item active" aria-current="page">
        <span class="page-link">2</span>
      </li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="/cerrar">Cerrar sesion</a>
      </li>
    </ul>
  </nav>
</div>


    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="row">
                <div class="col-5">
                    <h1 class="display-1 mt-1 mb-3" >Productos</h1>
                </div>
             </div>
        </div>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">
            <% productos.forEach(producto => { %> 
                <div class="card" style="width: 14rem; margin-left: 3rem; margin-bottom: 1rem;">
                <img src="<%=producto.imagen%>" class="card-img-top">
                <div class="text-center">
                  <div class="row row-cols-1">  
                    <h5 class="card-title" style="align-content: center;"><%=producto.producto%></h5>
                    <p class="card-text"><%=producto.descripcion%></p>
                    <p class="fw-bold" style="color:red;">$<%=producto.precio%> </p>
                  <div class="d-grid gap-2">
                      <a class="btn btn-success mb-2" href="/buscarIdProducto/<%=producto.id%>">Comprar</a>  
                  </div>
                </div>
        </div>
      </div>
        <% }); %> 
        </div>    


</body>
</html>